import React, { useState, useEffect, useRef } from 'react';
import { 
  Map, 
  Droplet, 
  Scissors, 
  Users, 
  Target, 
  Calendar, 
  LayoutDashboard,
  Info,
  ChevronRight,
  Map as MapIcon,
  Sparkles,
  TreeDeciduous,
  Zap
} from 'lucide-react';

const apiKey = ""; // API Key otomatis terisi di environment

// Custom Palm Oil Icon Component
const PalmOilIcon = ({ className }) => (
  <svg 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    strokeWidth="2" 
    strokeLinecap="round" 
    strokeLinejoin="round" 
    className={className}
  >
    <path d="M12 22s-1-5-1-9 5-6 8-6" />
    <path d="M12 22s1-5 1-9-5-6-8-6" />
    <path d="M12 13c-3-2-7-1-7-1s3-4 7-4" />
    <path d="M12 13c3-2 7-1 7-1s-3-4-7-4" />
    <path d="M12 9c-1-3-4-6-4-6s4 1 4 6" />
    <path d="M12 9c1-3 4-6 4-6s-4 1-4 6" />
    <path d="M12 22v-9" />
  </svg>
);

const App = () => {
  const [selectedBlock, setSelectedBlock] = useState('A1');
  const [selectedJob, setSelectedJob] = useState('Pemupukan');
  const [updateDate, setUpdateDate] = useState('');
  const [aiAnalysis, setAiAnalysis] = useState('');
  const [isAnalyzing, setIsAnalyzing] = useState(false);

  const blocks = Array.from({ length: 25 }, (_, i) => `A${i + 1}`);
  const jobs = [
    'Pemupukan', 
    'Panen', 
    'Pengendalian Gulma Kimia', 
    'Pengendalian Gulma Manual'
  ];

  const getData = (block, job) => {
    const baseSph = 143; 
    const blockNum = parseInt(block.substring(1));
    const sph = baseSph + (blockNum % 3); 
    const luasBlok = 30; // Asumsi standar 30 Ha per blok
    const jumlahPohon = sph * luasBlok;

    const jobDetails = {
      'Pemupukan': {
        tk: Math.ceil(sph / 20) + 2,
        material: blockNum % 2 === 0 ? 'Urea' : 'NPK 16-16-16',
        targetHa: '2.5 Ha/HK',
        targetDay: '12.5 Ha',
        targetTk: '0.5 Ha/Org',
        color: 'bg-blue-600'
      },
      'Panen': {
        tk: Math.floor(sph / 10),
        material: 'Parang, Egrek, Tojok, Angkong',
        targetHa: '1.2 Ton/Ha',
        targetDay: '15 Ton',
        targetTk: '1.5 Ton/Org',
        color: 'bg-orange-600'
      },
      'Pengendalian Gulma Kimia': {
        tk: 5,
        material: 'Glyphosate / Herbisida',
        targetHa: '4 Ha/HK',
        targetDay: '20 Ha',
        targetTk: '4 Ha/Org',
        color: 'bg-red-600'
      },
      'Pengendalian Gulma Manual': {
        tk: 12,
        material: 'Mesin Potong Rumput',
        targetHa: '0.8 Ha/HK',
        targetDay: '9.6 Ha',
        targetTk: '0.8 Ha/Org',
        color: 'bg-green-600'
      }
    };

    return { sph, jumlahPohon, ...jobDetails[job] };
  };

  const currentData = getData(selectedBlock, selectedJob);

  useEffect(() => {
    const now = new Date();
    setUpdateDate(now.toLocaleDateString('id-ID', { 
      day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit'
    }));
  }, []);

  // --- Gemini AI Integration ---
  const handleAiAnalysis = async () => {
    setIsAnalyzing(true);
    try {
      const prompt = `Analisis data perkebunan sawit ini:
      Blok: ${selectedBlock}
      Pekerjaan: ${selectedJob}
      SPH: ${currentData.sph}
      Total Pohon: ${currentData.jumlahPohon}
      Tenaga Kerja: ${currentData.tk} orang
      Target Harian: ${currentData.targetDay}
      
      Berikan 2 kalimat rekomendasi singkat untuk asisten lapangan agar pekerjaan ini efisien. Gunakan bahasa Indonesia profesional.`;

      const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          contents: [{ parts: [{ text: prompt }] }],
          systemInstruction: { parts: [{ text: "Anda adalah pakar agronomi sawit digital." }] }
        })
      });

      const result = await response.json();
      setAiAnalysis(result.candidates?.[0]?.content?.parts?.[0]?.text || "Analisis gagal dimuat.");
    } catch (error) {
      setAiAnalysis("Koneksi AI terputus.");
    } finally {
      setIsAnalyzing(false);
    }
  };

  return (
    <div className="min-h-screen bg-slate-50 font-sans text-slate-900">
      <nav className="bg-emerald-900 text-white p-4 shadow-xl sticky top-0 z-50">
        <div className="max-w-6xl mx-auto flex justify-between items-center">
          <div className="flex items-center gap-3">
            <div className="bg-emerald-800 p-2 rounded-xl shadow-inner border border-emerald-700">
              <PalmOilIcon className="w-8 h-8 text-emerald-300" />
            </div>
            <div className="flex flex-col leading-tight">
              <span className="text-2xl font-black tracking-tighter italic">ASBUN</span>
              <span className="text-[10px] uppercase tracking-widest text-emerald-400 font-bold">Data Intelligence AI</span>
            </div>
          </div>
          <div className="hidden md:block">
             <button 
              onClick={handleAiAnalysis}
              disabled={isAnalyzing}
              className="flex items-center gap-2 bg-emerald-700 hover:bg-emerald-600 px-4 py-2 rounded-full text-xs font-bold transition-all border border-emerald-500 shadow-lg active:scale-95"
            >
              {isAnalyzing ? <LoaderCircle className="w-4 h-4 animate-spin" /> : <Sparkles className="w-4 h-4" />}
              ANALISIS AI
            </button>
          </div>
        </div>
      </nav>

      <main className="max-w-6xl mx-auto p-4 md:p-8">
        {/* Filter Section */}
        <section className="grid md:grid-cols-2 gap-6 mb-8">
          <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
            <label className="flex items-center gap-2 text-[10px] font-black text-slate-400 mb-3 tracking-widest uppercase italic">
              <LayoutDashboard className="w-4 h-4" /> PILIH NOMOR BLOK
            </label>
            <select 
              value={selectedBlock}
              onChange={(e) => { setSelectedBlock(e.target.value); setAiAnalysis(''); }}
              className="w-full p-4 bg-slate-50 border-2 border-slate-100 rounded-xl focus:border-emerald-500 outline-none text-xl font-bold text-slate-700 appearance-none transition-all"
            >
              {blocks.map(b => <option key={b} value={b}>Blok {b}</option>)}
            </select>
          </div>

          <div className="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
            <label className="flex items-center gap-2 text-[10px] font-black text-slate-400 mb-3 tracking-widest uppercase italic">
              <Scissors className="w-4 h-4" /> JENIS PEKERJAAN
            </label>
            <select 
              value={selectedJob}
              onChange={(e) => { setSelectedJob(e.target.value); setAiAnalysis(''); }}
              className="w-full p-4 bg-slate-50 border-2 border-slate-100 rounded-xl focus:border-emerald-500 outline-none text-xl font-bold text-slate-700 appearance-none transition-all"
            >
              {jobs.map(j => <option key={j} value={j}>{j}</option>)}
            </select>
          </div>
        </section>

        {/* AI Insight Bar (Conditional) */}
        {aiAnalysis && (
          <div className="mb-6 bg-emerald-50 border border-emerald-200 p-4 rounded-2xl flex items-start gap-4 animate-in fade-in slide-in-from-top-4 duration-500">
            <div className="p-2 bg-emerald-600 rounded-lg text-white">
              <Zap className="w-5 h-5" />
            </div>
            <div>
              <p className="text-xs font-black text-emerald-800 uppercase tracking-tighter italic">Rekomendasi Cerdas Gemini:</p>
              <p className="text-sm text-emerald-900 font-medium leading-relaxed italic">"{aiAnalysis}"</p>
            </div>
          </div>
        )}

        {/* Main Data Display */}
        <section className="bg-white rounded-[2.5rem] shadow-2xl shadow-emerald-900/10 overflow-hidden border border-slate-200 mb-8">
          <div className={`p-8 text-white flex justify-between items-center relative overflow-hidden ${currentData.color}`}>
            <div className="relative z-10">
              <h2 className="text-3xl font-black uppercase tracking-tight mb-1 italic">Keterangan Kondisi Blok</h2>
              <p className="opacity-80 font-medium">Laporan Operasional Blok {selectedBlock} â€¢ Tahun 2024</p>
            </div>
            <PalmOilIcon className="w-40 h-40 absolute -right-10 -bottom-10 opacity-20 rotate-12" />
          </div>

          <div className="p-8 md:p-12">
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
              {/* Metric 1: SPH */}
              <div className="flex flex-col gap-2">
                <div className="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center text-emerald-700 shadow-sm mb-2">
                  <Target className="w-6 h-6" />
                </div>
                <p className="text-[10px] text-slate-400 uppercase font-black tracking-widest">SPH Aktif</p>
                <p className="text-3xl font-black text-slate-800 tracking-tight">{currentData.sph} <span className="text-xs font-bold text-slate-400 uppercase">Pokok/Ha</span></p>
              </div>

              {/* Metric 2: Jumlah Pohon */}
              <div className="flex flex-col gap-2">
                <div className="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center text-emerald-700 shadow-sm mb-2">
                  <TreeDeciduous className="w-6 h-6" />
                </div>
                <p className="text-[10px] text-slate-400 uppercase font-black tracking-widest">Jumlah Pohon/Blok</p>
                <p className="text-3xl font-black text-slate-800 tracking-tight">{currentData.jumlahPohon.toLocaleString()} <span className="text-xs font-bold text-slate-400 uppercase">Pokok</span></p>
              </div>

              {/* Metric 3: Tenaga Kerja */}
              <div className="flex flex-col gap-2">
                <div className="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center text-blue-700 shadow-sm mb-2">
                  <Users className="w-6 h-6" />
                </div>
                <p className="text-[10px] text-slate-400 uppercase font-black tracking-widest">Tenaga Kerja</p>
                <p className="text-3xl font-black text-slate-800 tracking-tight">{currentData.tk} <span className="text-xs font-bold text-slate-400 uppercase">Personil</span></p>
              </div>

              {/* Parameter Box */}
              <div className="lg:col-span-1 bg-slate-50 p-6 rounded-3xl border border-slate-100">
                <h3 className="font-black text-slate-400 text-[10px] tracking-widest uppercase mb-4">Parameter Teknis</h3>
                <div className="space-y-3 text-xs">
                  <div className="flex justify-between py-1 border-b border-slate-200">
                    <span className="text-slate-500 font-medium italic">Material/Alat</span>
                    <span className="font-bold text-slate-700">{currentData.material}</span>
                  </div>
                  <div className="flex justify-between py-1 border-b border-slate-200">
                    <span className="text-slate-500 font-medium italic">Target/Ha</span>
                    <span className="font-bold text-emerald-700">{currentData.targetHa}</span>
                  </div>
                  <div className="flex justify-between py-1 border-b border-slate-200">
                    <span className="text-slate-500 font-medium italic">Target Harian</span>
                    <span className="font-bold text-emerald-700">{currentData.targetDay}</span>
                  </div>
                  <div className="flex justify-between py-1">
                    <span className="text-slate-500 font-medium italic">Target Per TK</span>
                    <span className="font-bold text-emerald-700">{currentData.targetTk}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        {/* Map Visualization */}
        <section className="bg-white p-8 rounded-[2.5rem] shadow-sm border border-slate-200 mb-8">
          <div className="flex items-center gap-3 mb-8">
            <div className="p-2 bg-emerald-600 rounded-lg">
              <MapIcon className="w-5 h-5 text-white" />
            </div>
            <h3 className="text-2xl font-black text-slate-800 tracking-tight italic">Peta Spasial Blok Tanam</h3>
          </div>
          
          <div className="grid grid-cols-5 gap-3 w-full p-4 bg-slate-50 rounded-[2rem] border border-slate-200">
            {blocks.map((b) => (
              <button 
                key={b}
                onClick={() => { setSelectedBlock(b); setAiAnalysis(''); }}
                className={`
                  aspect-square rounded-2xl flex items-center justify-center text-xs font-black transition-all duration-300
                  ${selectedBlock === b 
                    ? 'bg-emerald-600 text-white shadow-xl scale-110 border-4 border-white z-10' 
                    : 'bg-white text-slate-300 hover:bg-emerald-50 hover:text-emerald-400 border border-slate-100'}
                `}
              >
                {b}
              </button>
            ))}
          </div>
        </section>

        {/* Footer info */}
        <footer className="flex flex-col md:flex-row justify-between items-center text-slate-400 text-[10px] font-bold tracking-widest border-t border-slate-200 pt-8 pb-12 uppercase">
          <div className="flex items-center gap-2 mb-4 md:mb-0 bg-slate-100 px-5 py-2 rounded-full border border-slate-200">
            <Calendar className="w-3 h-3 text-emerald-600" />
            Update Terakhir: <span className="text-slate-800 ml-1 italic">{updateDate}</span>
          </div>
          <div className="flex items-center gap-6">
            <span className="text-emerald-600">ASBUN Engine v3.0</span>
            <span className="text-slate-300 font-medium lowercase tracking-normal text-[11px] italic">Supported by Gemini Flash 2.5</span>
          </div>
        </footer>
      </main>
    </div>
  );
};

// Helper for Loader
const LoaderCircle = ({ className }) => (
  <svg className={className} xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><path d="M21 12a9 9 0 1 1-6.219-8.56"/></svg>
);

export default App;
